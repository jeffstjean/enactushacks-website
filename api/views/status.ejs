    <%- include('partials/nav.ejs') %>
    <img class="img-title" src="img/status_text.png" alt="Sign-In">
    <div class="form-container">
        <div class="flex-container">
            <div class="status">
                <% if(user.first_name) { %>
                    <h1>Hi <span class="status-alternate"><%= user.first_name %></span>, your application status is <span class="status-alternate"><%= user.application_status.toUpperCase() %></span>.</h1>
                <% } else { %>
                    <h1>Hi, your application status is <span class="status-alternate"><%= user.application_status.toUpperCase() %></span>.</h1>
                <% } %>
                <% if(!user.date_application_completed && accepting_applications) { %>
                    <a href="/apply"><button class="btn btn-purple action">Complete Application</button></a>
                <% } else { %>
                    <a href="/about"><button class="btn btn-purple action">About EnactusHacks</button></a>
                <% } %>
                <% if(!accepting_applications) { %>
                    <p>Applications are now closed.</p>
                <% }  %>
            </div>
        </div>
    </div>
