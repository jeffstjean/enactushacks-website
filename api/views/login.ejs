    <!-- <a href="/"><img class="logo-small" src="img/enactushacksLogoNoText.png" alt="EnactusHacks | A 24 Hour Startup"></a> -->
    <div class="container u-flex-center">
        <img class="title-image" src="img/signin_text.png" alt="Sign-In">
        <% if(locals.errors) { %>
            <div class="error u-text-center">
                <% errors.forEach(error => { %>
                    <% if(error === 'InvalidCredentials') { %>
                        <p>Incorrect email or password.</p>
                    <% } else if(error === 'PasswordMismatch') { %>
                        <p>Passwords do not match.</p>
                    <% } else if(error === 'DuplicateUser') { %>
                        <p>A user with that email already exists.</p>
                    <% } else if(error === 'InvalidPassword') { %>
                        <p>Passwords must be at least 8 characters, container one uppercase and lowercase letter, a special character and a number.</p>
                    <% } else {%>
                        <p><%= error %></p>
                    <% } %>
                <% }) %>
            </div>
        <% } %>
        <!-- <div class="info u-text-center">
            <p><strong>Note:</strong> we have been experiencing a large number of issues with emails being sent to @uwo.ca emails. We are actively working to resolve this issue.</br>In the meantime, try using another email address or <a href="mailto:jeffrey@stjean.ca?subject='Assistance with EnactusHacks Registration'">reach out to us</a> for more assistance.</p>
        </div> -->
        <div class="form-container u-full-width">
            <div class="flex-container u-full-width u-text-center u-flex-center" id="login-form">
                <form action="/login" method="POST" id="login">
                    <h1>Login</h1>
                    <input type="email" id="email" name="email" placeholder="Email" required><br>

                    <input type="password" id="password" name="password" placeholder="Password" required><br>

                    <br>
                    <input type="submit" value="Log In" class="btn btn-yellow action">
                </form>
                <form action="/signup" method="POST" id="create">
                    <h1>Create Account</h1>
                    <input type="email" id="email" name="email" placeholder="Email" required><br>

                    <input type="password" id="password" name="password" placeholder="Password" required><br>

                    <br>
                    <input type="submit" value="Sign Up" class="btn btn-yellow action">
                </form>
            </div>
        </div>
    </div>
