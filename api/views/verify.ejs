    <%- include('partials/nav.ejs') %>
    <img class="img-title" src="img/verify_text.png" alt="Sign-In">
    <div class="form-container">
        <div class="flex-container">
            <form action="/verify" method="POST" id="verify">
                <div class="verify-msg">
                    <% if(locals.user) { %>
                        <p>We have sent an email to <%= user.email %>. Please click the link in that email before proceeding (check your spam/junk).</p>
                    <%} else if(locals.expired) { %>
                        <p>Sorry that token has expired. Please request a new one below.</p>
                    <% } %>
                </div>
                <h3>Resend Verification</h3></p>
                <label for="email">Email:</label><br>
                <input type="email" id="email" name="email" placeholder="Email" required><br>
                <input type="submit" value="Resend Verification" class="btn btn-purple action">
            </form>
