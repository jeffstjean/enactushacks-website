    <%- include('partials/nav.ejs') %>
    <div class="container u-flex-center">
        <img class="title-image" src="/img/verify_text.png" alt="Verify Your Email">
        <% if(locals.user) { %>
            <p class="text-small u-text-center">We have sent an email to <%= user.email %>. Please click the link in that email before proceeding (check your spam/junk).</p>
        <%} else if(locals.expired) { %>
            <p class="text-small u-text-center">Sorry that token has expired. Please request a new one below.</p>
        <% } %>
        <div class="form-container">
            <div class="flex-container u-text-center">
                <form action="/verify" method="POST" id="verify">
                    <h2>Resend Verification</h2>
                    <input type="email" id="email" name="email" placeholder="Email" required><br>
                    <input type="submit" value="Resend" class="btn btn-purple action">
                </form>
            </div>
        </div>
    </div>
