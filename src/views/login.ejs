  <body>
       <img class="right" src="img/right.png">

  <div class="container form-box-straight col-md-7  ">
    <div class="row ">
      <div class="   col-md-9 my-5 mx-auto">
        <h1 class="sleek-large-row-header no-margin">Log In</h1>

      <% if(locals.error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        <form class="form-text" method="POST" action="login">
          <div class="form-group">
            <label>Email:</label>
            <input type="email" value="<%=locals.email%>" name="email" class="form-control">
          </div>
          <div class="form-group">
          <label>Password:</label>
          <input type="password" name="password" class="form-control">
          </div>
          <ul class="list-inline">
          <button type="submit" class=" btn-form btn btn-enactus bold list-inline-item text-white">Log in</button>
          <hr class="grey">
        </form>
        <!-- <a href="forgot" class="btn btn-form bold list-inline-item btn-enactus text-white"> Forgot my password</a> -->
    </div>
  </div>
  </div>

  </body>
